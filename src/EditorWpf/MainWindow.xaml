<Window x:Class="EditorWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EditorWpf"
        mc:Ignorable="d"
        Title="Maxwin Editor" Height="720" Width="1100"
        MinHeight="480" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="8" LastChildFill="True">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button x:Name="OpenButton" Width="110" Margin="0,0,8,0" Click="OpenButton_OnClick">Open Scene</Button>
                <Button x:Name="ReloadButton" Width="80" Margin="0,0,8,0" Click="ReloadButton_OnClick">Reload</Button>
            </StackPanel>
            <TextBox x:Name="ScenePathBox" IsReadOnly="True" VerticalContentAlignment="Center"/>
        </DockPanel>

        <Grid Grid.Row="1" Margin="8,0,8,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="#333" BorderThickness="1" Padding="6">
                <DockPanel LastChildFill="True">
                    <TextBlock DockPanel.Dock="Top" FontWeight="Bold" Margin="0,0,0,6">Entities</TextBlock>
                    <ListBox x:Name="EntitiesList" SelectionChanged="EntitiesList_OnSelectionChanged"
                             DisplayMemberPath="DisplayName"/>
                </DockPanel>
            </Border>

            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#222"/>

            <Border Grid.Column="2" BorderBrush="#333" BorderThickness="1" Padding="6">
                <DockPanel LastChildFill="True">
                    <TextBlock DockPanel.Dock="Top" FontWeight="Bold" Margin="0,0,0,6">Inspector</TextBlock>
                    <ListBox x:Name="InspectorList" FontFamily="Consolas"/>
                </DockPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="#222" Padding="8,6">
            <TextBlock x:Name="StatusText" Foreground="#EEE">Ready.</TextBlock>
        </Border>
    </Grid>
</Window>
